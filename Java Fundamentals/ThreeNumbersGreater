import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter first number: ");
        int a = sc.nextInt();
        System.out.print("Enter second number: ");
        int b = sc.nextInt();
        System.out.print("Enter third number: ");
        int c = sc.nextInt();
        if (a > b && a > c){
            System.out.printf("The greatest number is:%d", a);
        }
        else if (b > c) {
            System.out.printf("The greatest number is:%d", b);
        }
        else if (c > b && c > a) {
            System.out.printf("The greatest number is:%d", c);
        }
        else {
            System.out.printf("There are too many numbers are equal or greatest.");
        }
    }
}
